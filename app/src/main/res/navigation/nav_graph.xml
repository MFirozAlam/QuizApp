<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">

    <!-- HomeFragment -->
    <fragment android:id="@+id/homeFragment"
        android:name="com.example.quizapp.view.HomeFragment"
        android:label="Home"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <action
            android:id="@+id/action_homeFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <!-- QuizFragment -->
    <fragment android:id="@+id/quizFragment"
        android:name="com.example.quizapp.view.QuizFragment"
        android:label="Quiz">

        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>

    <!-- ResultFragment -->
    <fragment android:id="@+id/resultFragment"
        android:name="com.example.quizapp.view.ResultFragment"
        android:label="Result" />
</navigation>
